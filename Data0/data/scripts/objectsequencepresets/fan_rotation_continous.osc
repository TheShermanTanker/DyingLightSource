sub fan_rotation_continous()
{
	Preset("fan_rotation_continous")
	{
      OnLevelStart()
	    {
        StopAnimation(0);
        Enable(1, false);           
   		}
	 
   	  OnEnable()
	    {
        PlayAnimation(0, "fan rotation", -1);
        Enable(1, true);           
   		}
   		
   		OnDisable()
	    {
       StopAnimation(0);
       Enable(1, false);           
   		}
      
		  TimedEvent(0.0)
      { 
      }
	}
}

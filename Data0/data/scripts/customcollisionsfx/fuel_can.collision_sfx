///////////////////////////////////////////////////////////////////////////////////////////////////
// custom collision sfx preset
// http://wiki.techland.pl/chromeengine/bin/view/ChromeEngine4/CollisionSfx
///////////////////////////////////////////////////////////////////////////////////////////////////

import "surface_id.def"

///////////////////////////////////////////////////////////////////////////////////////////////////
sub Sounds()
{
    Hit()
    {
		MinInterval(0.8);
        MinSpeed(2);

        SoundHarder(SurfaceId_Gravel, "canister_metal_collision_ground_XX.wav");
    }
}








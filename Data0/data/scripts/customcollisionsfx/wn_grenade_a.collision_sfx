///////////////////////////////////////////////////////////////////////////////////////////////////
// custom collision sfx preset
// http://wiki.techland.pl/chromeengine/bin/view/ChromeEngine4/CollisionSfx
///////////////////////////////////////////////////////////////////////////////////////////////////

import "surface_id.def"

///////////////////////////////////////////////////////////////////////////////////////////////////
sub Sounds()
{
    Hit()
    {
        FreqRandomize(0.95, 1.05);
		MinInterval(0.5);
        MinSpeed(1.0);
		

        SoundHarder(SurfaceId_Sand, "grenade_bounce_XX.wav");
		Sound(SurfaceId_Water, "grenade_bounce_XX.wav");
    }
}

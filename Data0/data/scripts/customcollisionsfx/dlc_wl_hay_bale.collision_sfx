///////////////////////////////////////////////////////////////////////////////////////////////////
// custom collision sfx preset
// http://wiki.techland.pl/chromeengine/bin/view/ChromeEngine4/CollisionSfx
///////////////////////////////////////////////////////////////////////////////////////////////////

import "surface_id.def"

///////////////////////////////////////////////////////////////////////////////////////////////////
sub Sounds()
{
    Hit()
    {
		MinInterval(0.2, 0.4);
        MinSpeed(0.1, 4);

        SoundHarder(SurfaceId_Sand, "hay_bale_collision_ground_XX.wav");
		Sound(SurfaceId_Water, "object_medium_collision_water_heavy_XX.wav");
    }
}
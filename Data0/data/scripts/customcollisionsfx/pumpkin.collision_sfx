///////////////////////////////////////////////////////////////////////////////////////////////////
// custom collision sfx preset
// http://wiki.techland.pl/chromeengine/bin/view/ChromeEngine4/CollisionSfx
///////////////////////////////////////////////////////////////////////////////////////////////////

import "surface_id.def"

///////////////////////////////////////////////////////////////////////////////////////////////////
sub Sounds()
{
    Hit()
    {
		MinInterval(1.0);
        MinSpeed(2);
		FreqRandomize(0.9, 1.0);

        SoundHarder(SurfaceId_Sand, "pumpkin_fall_XX.wav");
		Sound(SurfaceId_Water, "object_medium_collision_water_light_XX.wav");
    }
}
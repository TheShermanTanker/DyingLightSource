import "surface_id.def"

///////////////////////////////////////////////////////////////////////////////////////////////////
sub Sounds()
{
    Hit()
    {
		MinInterval(3.0);
        MinSpeed(2);
		FreqRandomize(1.0, 1.1);

        SoundHarder(SurfaceId_Sand, "axe_small_collision_ground_XX.wav");
		Sound(SurfaceId_Water, "object_medium_collision_water_heavy_XX.wav");
    }
}








///////////////////////////////////////////////////////////////////////////////////////////////////
// custom collision sfx preset
// http://wiki.techland.pl/chromeengine/bin/view/ChromeEngine4/CollisionSfx
///////////////////////////////////////////////////////////////////////////////////////////////////

import "surface_id.def"

///////////////////////////////////////////////////////////////////////////////////////////////////
sub Sounds()
{
    Hit()
    {
        MinInterval(5, 5);
        MinSpeed(4, 6);
		FreqRandomize(1.1, 1.2);
        
        SoundHarder(SurfaceId_Sand, "wood_medium_collision_ground_XX.wav");
		//Sound(SurfaceId_Water,  "object_medium_collision_water_light_XX.wav",    "object_medium_collision_water_heavy_XX.wav");	
    }
}

///////////////////////////////////////////////////////////////////////////////////////////////////


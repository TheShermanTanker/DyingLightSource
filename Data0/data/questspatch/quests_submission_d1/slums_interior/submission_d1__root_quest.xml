<?xml version="1.0"?>
<QuestsDefinitions
     level="slums_interior"
     pxsl_line="3">
    <Quest
         name="game_root"
         pxsl_line="5">
        <!-- we require the player to move to the starting position on this map, -->
        <!-- without any locations/objectives -->
        <!-- used to logically hide all quests of this map behind this one -->
        <!-- The locker is (has to be) visible across maps, but its children are glued to it -->
        <!-- in order not to create an empty goal. -->
        <Phase
             type="session param"
             name="_"
             param="MultiplayerGamePart"
             value="false"
             pxsl_line="11" />
        <Phase
             type="go to"
             name="start of all game quests"
             distance="10000"
             show_locations="false"
             pxsl_line="12">
            <Destination
                 pxsl_line="12">
                <QuestObject
                     class="SpawnPoint"
                     name="cin_the_tower_waking_up_spawn"
                     pxsl_line="12" />
            </Destination>
            <DebugPlayerPosition
                 pxsl_line="13">
                <QuestObject
                     class="SpawnPoint"
                     name="cin_the_tower_waking_up_spawn"
                     pxsl_line="13" />
            </DebugPlayerPosition>
        </Phase>
        <Phase
             type="checkpoint"
             name="initial resort autosave"
             pxsl_line="14">
            <Destination
                 pxsl_line="14">
                <QuestObject
                     class="SpawnPoint"
                     name="cin_the_tower_waking_up_spawn"
                     pxsl_line="14" />
            </Destination>
        </Phase>
    </Quest>
</QuestsDefinitions>

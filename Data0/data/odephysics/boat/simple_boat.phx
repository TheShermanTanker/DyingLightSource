!include("../Include/ODEPhysicsBoat.def")

///////////////////////////////////////////////////////////////////////////////////////////////////
PhysicsParams()
{
    SetPhysicsSurfaceID(SRF_METAL)
    SetVelsGate(0, 0)
    SetAutoDisableVels(0.01, 0.01, 1.5)
    
    SetAbsorbers(0.9, 3)
    
    SetMaxVels(90, 30) 
    SetMaxWatchingTime(0.5)
    AllowDepthCompression(1)
    SynchroMeshExtrapolation(0)
    EnablePlatformAutoMounting(0)
    
    SetWaterFloat(0.06)
}

///////////////////////////////////////////////////////////////////////////////////////////////////
BoatParams()
{
    Mass(300)

    MassScale([1.5, 1.5, 1.5])
    MassShift([0, 0, 0])
    
    AddMainGeom("", "box")
    
    WaterWave(0, 0.002)
}


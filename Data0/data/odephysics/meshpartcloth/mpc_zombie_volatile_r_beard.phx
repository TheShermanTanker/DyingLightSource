!include("MeshPartCloth.def")

///////////////////////////////////////////////////////////////////////////////////////////////////
MeshPartCloth()
{
//----------------------------------------------
// bones
//----------------------------------------------
    BonesGridSize(2, 4)

    $XDIST(f, 0.1)
    $YDIST(f, -0.9)

    Bone(0, 0, "r_beard_00", 1, XDIST, YDIST)
    Bone(0, 1, "r_beard_01", 0, XDIST, YDIST)
    Bone(0, 2, "r_beard_02", 0, XDIST, YDIST)
    Bone(0, 3, "",           0, XDIST, YDIST)

    Bone(1, 0, "r_beard_small_00", 1, XDIST, YDIST)
    Bone(1, 1, "r_beard_small_01", 0, XDIST, YDIST)
    Bone(1, 2, "",                 0, XDIST, YDIST)
    Bone(1, 3, "",                 0, XDIST, YDIST)
    
//----------------------------------------------
// collisions 
//----------------------------------------------

    CollisionSlide(1)
    CollisionBounce(0)
    CollisionSpeedMod(1)
    
    CollisionShapesMoveInfluence(1)
    
    CollisionSegmentDivision(0.1)
    CollisionNormalAngleThreshold(180)
    
    NodeCollisionSphereRadius(0.1)
    ExternalCollisionAffectMul(0)
    
//----------------------------------------------
// spring params 
//----------------------------------------------

    Viscous(3)
    AirFriction(1)

    StructuralStiffness(8000, 1000)
    ShearStiffness(5000, 1000)
    FlexionStiffness(5000, 1000)

    HorizontSpringRatio(0)
    
    CheckLengthsStepsPerSec(0)

//----------------------------------------------
// physical params 
//----------------------------------------------
    
    Mass(0.2)
    GravityMul(0.6)
    WindInfluence(1)

//----------------------------------------------
// other params
//----------------------------------------------

    SynchroWithPhysics(0)
    EnableAPBOut(1)
    
    ObjectMoveMul(1)
    AnimationMoveMul(0.7)
}



    Mode3D(0)
    
    Bone(0, 0, "bone_dressb_backd_01", 1, XDIST, YDIST)
    Bone(0, 1, "bone_dressb_backd_02", 0, XDIST, YDIST)
    Bone(0, 2, "bone_dressb_backd_03", 0, XDIST, YDIST)

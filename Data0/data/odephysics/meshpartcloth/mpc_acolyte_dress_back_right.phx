    Bone(0, 5, "bone_dressb_backd_06", 0, XDIST, YDIST)
    Bone(0, 6, "",                     0, XDIST, YDIST)

    Bone(1, 0, "bone_dressb_backe_01", 1, XDIST, YDIST)
    Bone(1, 1, "bone_dressb_backe_02", 0, XDIST, YDIST)

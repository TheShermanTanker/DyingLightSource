!include("MeshPartCloth.def")

///////////////////////////////////////////////////////////////////////////////////////////////////
MeshPartCloth()
{
//----------------------------------------------
// bones
//----------------------------------------------
    BonesGridSize(1, 3)

    $XDIST(f, -1)
    $YDIST(f, -0.986)

    Bone(0, 0, "bone_toy_ray", 1, XDIST, YDIST)
    Bone(0, 1, "",             0, XDIST, YDIST)
    Hook(0, 2, "root", [0.54, 1.25, 0.08], XDIST, YDIST)
   
//----------------------------------------------
// collisions 
//----------------------------------------------

    CollisionSlide(1)
    CollisionSpeedMod(1)
    CollisionBounce(0)
    
    CollisionShapesMoveInfluence(1)
    
    CollisionSegmentDivision(100)
    CollisionNormalAngleThreshold(180)
    
    NodeCollisionSphereRadius(0.1)
    ExternalCollisionAffectMul(0)

//----------------------------------------------
// spring params 
//----------------------------------------------

    Viscous(0)
    AirFriction(0)

    StructuralStiffness(9000, 9000)
    ShearStiffness(1000, 1000)
    FlexionStiffness(0, 0)

    HorizontSpringRatio(0)
    
    CheckLengthsStepsPerSec(0)

//----------------------------------------------
// physical params 
//----------------------------------------------
    
    Mass(1)
    GravityMul(0.15)
    WindInfluence(0.1)
    //?? WindGust(0.04, 0.5)

//----------------------------------------------
// other params
//----------------------------------------------

    SynchroWithPhysics(0)
    EnableAPBOut(1)
    
    ObjectMoveMul(0.986)
    AnimationMoveMul(1)
}



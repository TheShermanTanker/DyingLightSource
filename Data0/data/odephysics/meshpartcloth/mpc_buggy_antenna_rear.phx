!include("MeshPartCloth.def")

///////////////////////////////////////////////////////////////////////////////////////////////////
MeshPartCloth()
{
//----------------------------------------------
// bones
//----------------------------------------------
    BonesGridSize(1, 2)

    $XDIST(f, 0.1)
    $YDIST(f, -1)

    Bone(0, 0, "physical_antenna_a", 1, XDIST, YDIST)
    Bone(0, 1, "",                   0, XDIST, YDIST)

    
//----------------------------------------------
// collisions 
//----------------------------------------------

    CollisionSlide(1)
    CollisionSpeedMod(1)
    CollisionBounce(0)
    
    CollisionShapesMoveInfluence(1)
    
    CollisionSegmentDivision(100)
    CollisionNormalAngleThreshold(180)
    
    NodeCollisionSphereRadius(0.1)
    ExternalCollisionAffectMul(0)
    
	CollisionMaxDistance(0, 1, "root", [-2.00, 1.85, 0.1], 0, 20)
    
    
//----------------------------------------------
// spring params 
//----------------------------------------------

    Viscous(0)
    AirFriction(0)

    StructuralStiffness(8000, 8000)
    ShearStiffness(8000, 8000)
    FlexionStiffness(8000, 8000)

    HorizontSpringRatio(1)
    
    CheckLengthsStepsPerSec(0)

//----------------------------------------------
// physical params 
//----------------------------------------------
    
    Mass(1)
    GravityMul(1)
    WindInfluence(1)

//----------------------------------------------
// other params
//----------------------------------------------

    SynchroWithPhysics(0)
    EnableAPBOut(1)
    
    ObjectMoveMul(0.9)
    AnimationMoveMul(1)
}



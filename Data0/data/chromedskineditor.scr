// To declare settings specific for given mesh use following keywords: 
// mesh_FPP("MESH_NAME")
// mesh_TPP("MESH_NAME")

sub main()
{
    default_FPP()
    {
        Show("head_shadow");
        Show("head_player");
        Replace("head_def.mat", "shadow_def.mat");
        Replace("shadow_def.mat", "shadow_def.mat");
        Show("hair_shadow");
    }  
    default_TPP()
    {
        Hide("head_shadow");
        Hide("head_player");
        Hide("hair_shadow");
    }
}
